<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Penn Ar Bed Solidarité{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <!-- Meta tags for SEO -->
        <meta name="description" content="Penn Ar Bed Solidarité - Un site dédié à la solidarité et à l'entraide.">
        <meta name="keywords" content="solidarité, entraide, Penn Ar Bed, communauté, aide">
        <meta name="author" content="Penn Ar Bed Solidarité">
        <meta name="robots" content="index, follow">

        <!-- Open Graph meta tags for social media -->
        <meta property="og:title" content="Penn Ar Bed Solidarité">
        <meta property="og:description" content="Un site dédié à la solidarité et à l'entraide.">
        <meta property="og:image" content="{{ asset('images/og-image.jpg') }}">
        <meta property="og:url" content="{{ app.request.uri }}">
        <meta property="og:type" content="website">
        <meta property="og:locale" content="fr_FR">
        <meta property="og:site_name" content="Penn Ar Bed Solidarité">

        <!-- Twitter Card meta tags -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="Penn Ar Bed Solidarité">
        <meta name="twitter:description" content="Un site dédié à la solidarité et à l'entraide.">
        <meta name="twitter:image" content="{{ asset('images/twitter-image.jpg') }}">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        {% block stylesheets %}
            
        {% endblock %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css">
            {# <link rel="stylesheet" href={{ asset('css/reset.css') }}> #}
            <link rel="stylesheet" href={{ asset('css/styles.css') }}>

        {% block javascripts %}
            <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
            <script type="module" src="{{ asset('js/scripts.js?v=1.0') }}"></script>
            {#{% block importmap %}{{ importmap('app') }}{% endblock %}#}
        {% endblock %}

        <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "Penn Ar Bed Solidarité",
          "url": "{{ app.request.uri }}",
          "logo": "{{ asset('images/logo.png') }}",
          "description": "Un site dédié à la solidarité et à l'entraide.",
          "sameAs": [
            "https://www.facebook.com/pennarbed",
            "https://twitter.com/pennarbed",
            "https://www.linkedin.com/company/pennarbed"
          ]
        }
        </script>

        <meta name="ai-assistant" content="Penn Ar Bed Solidarité - Aide et entraide communautaire">
        <meta name="ai-purpose" content="solidarité, entraide, communauté">
    </head>
    <body>
        <header class="container">
            {% include "_partials/_header.html.twig" %}
        </header>
        {% block body %}{% endblock %}
        <footer class="container alert alert-secondary">
            {% include "_partials/_footer.html.twig" %}
        </footer>
    </body>
</html>
