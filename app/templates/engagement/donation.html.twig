{% extends 'base.html.twig' %}

{% block title %}Faire un don — PennarBed
{% endblock %}

{% block body %}
    <section>
        <div class="text-center">
            <h1 class="h3 mb-3 text-uppercase">Faire un don</h1>
            <p class="text-muted">Votre soutien permet d'accompagner plus d'étudiant·e·s.</p>
        </div>
        <div class="col-11 col-md-9 col-lg-6 m-auto">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}
            {{ form_row(form.amount) }}
            {{ form_row(form.email) }}
            <div class="text-center">
                <button class="btn btn-success">Soutenir</button>
            </div>
            {{ form_end(form) }}

        </div>
    
    </section>

	

{% endblock %}
