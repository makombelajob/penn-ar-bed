{% extends 'base.html.twig' %}

{% block title %}Répondre — Admin{% endblock %}

{% block body %}
<h1 class="h3 mb-3">Répondre au message #{{ message.id }}</h1>

<div class="mb-4">
    <div class="card">
        <div class="card-body">
            <div class="mb-2"><strong>Reçu le:</strong> {{ message.createdAt|date('Y-m-d H:i') }}</div>
            <div class="mb-2"><strong>Email:</strong> {{ message.email ?? '—' }}</div>
            <div class="mb-2"><strong>Sujet:</strong> {{ message.subject ?? '—' }}</div>
            <div><strong>Message:</strong><br>{{ message.message|nl2br }}</div>
        </div>
    </div>
 </div>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Votre réponse</label>
        <textarea class="form-control" name="reply" rows="6">{{ message.reply }}</textarea>
    </div>
    <button class="btn btn-primary">Enregistrer</button>
    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">Retour</a>
</form>
{% endblock %}


